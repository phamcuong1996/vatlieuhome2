                    {% include '/footer/contacts.twig' %}
                </div>
                <div class="col-6 col-md-3 col-lg-2">
                    {% include '/footer/links.twig' with {
                        title: 'Information',
                        links: [
                            {'title': 'About Us'},
                            {'title': 'Delivery Information'},
                            {'title': 'Privacy Policy'},
                            {'title': 'Brands'},
                            {'title': 'Contact Us'},
                            {'title': 'Returns'},
